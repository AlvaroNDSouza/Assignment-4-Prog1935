<head>
    <%- include ("../shared/head") %>
</head>
<body>
    <div class="container">
        <h1>Receipt</h1>
        <p><a href="/orders" class="link-primary">View Orders</a></p>
<div class="container">
    <table class="table table-hover table-bordered">
        <tbody>
        <tr>
            <td>Name:</td>
            <td> <%= fullname %></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td> <%= email %></td>
        </tr>
        <tr>
            <td>Phone Number:</td>
            <td> <%= phoneNumber %></td>
        </tr>

        <tr>
            <td>Delivery Address :</td>
            <td> <%= deliveryAddress  %></td>
        </tr>

        <tr>
            <td><%= product1 %> Product 1 @ <%= (getSalesTaxRate(province) * 100).toFixed(2) %>:</td>
            <td> $<%= productOne.toFixed(2) %></td>
        </tr>
        <tr>
            <td><%= product2 %> Product 2 @ <%= (getSalesTaxRate(province) * 100).toFixed(2) %>:</td>
            <td> $<%= productTwo.toFixed(2) %></td>
        </tr>
        <tr>
            <td><%= product3 %> Product 3 @ <%= (getSalesTaxRate(province) * 100).toFixed(2) %>:</td>
            <td> $<%= productThree.toFixed(2) %></td>
        </tr>
        <tr>
            <td>Shipping Fee:</td>
            <td>$<%= shippingCost.toFixed(2) %></td>
        </tr>
        <tr>
            <td>Sub Total:</td>
            <td>$<%= total.toFixed(2) %></td>
        </tr>
        <tr>
            <td>Taxes @ <%= getSalesTaxRate(province) * 100 %> %:</td>
            <td>$<%= salesTax.toFixed(2) %></td>
        </tr>
        <tr>
            <td>Total:</td>
            <td>$<%= (total + salesTax).toFixed(2) %></td>
        </tr>

        </tbody>
    </table>
    </div>
        <%- include("../shared/footer.ejs") %>
    </div>
    <%- include("../shared/scripts.ejs") %>
</body>